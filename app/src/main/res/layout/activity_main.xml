<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="170dp"
        android:background="@color/DarkPink">
    </RelativeLayout>

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="309dp"
        android:src="@drawable/logopreview" />

    <TextView
        android:id="@+id/WelcomeId"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="-64dp"
        android:layout_marginBottom="33dp"
        android:gravity="center"
        android:text="Social Volunteering App"
        android:textColor="@color/Cyan"
        android:textSize="28sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/LoginEmail"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/imageView"
        android:layout_marginTop="45dp"
        android:layout_marginBottom="16dp"
        android:padding="10dp"

        android:hint="Enter Email"
        android:textColor="@color/black"
        android:background="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:textColorHint="#706D6D"
        android:inputType="textEmailAddress" />

    <EditText
        android:id="@+id/LoginPassword"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_below="@+id/LoginEmail"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="sans-serif"
        android:hint="Enter Password"
        android:background="@color/white"
        android:padding="10dp"

        android:textColor="@color/black"
        android:textColorHint="#706D6D"
        android:inputType="textPassword" />

    <Button
        android:id="@+id/LogIn"
        android:layout_width="88dp"
        android:layout_height="48dp"
        android:layout_below="@+id/LoginPassword"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:background="@color/customColorAccent"
        android:text="Log In"
        android:textColor="@color/black"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/SignInLink"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_below="@+id/LogIn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:clickable="true"
        android:onClick="openNewPage"
        android:text="New Member? Sign Up"
        android:textColor="@color/black"
        android:textStyle="bold" />


</RelativeLayout>