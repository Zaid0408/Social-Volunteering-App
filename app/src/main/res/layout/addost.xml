<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    tools:context=".VolunteerPost">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:background="@drawable/gradient_background"
        android:textColor="@android:color/white"
        android:text="Create a Post"
        android:textSize="22sp"
        android:gravity="center"
        android:textStyle="bold"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView"
        android:layout_centerInParent="true"
        android:layout_marginStart="50dp"
        android:layout_marginTop="120dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:background="#FFFFFF">



        <EditText
            android:id="@+id/editTextText1"
            android:layout_width="match_parent"
            android:layout_height="48dp"

            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/translucent_background"
            android:backgroundTint="#F1F1F1"

            android:ems="10"
            android:hint="Enter Description of Event"
            android:inputType="text"
            android:minLines="5"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#706D6D"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextContent"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/editTextText1"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/translucent_background"
            android:backgroundTint="#F1F1F1"

            android:hint="Enter Content Text"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#706D6D"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextDate"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/editTextContent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/translucent_background"
            android:backgroundTint="#F1F1F1"
            android:hint="Enter Date"

            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#706D6D"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/editTextVenue"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/editTextDate"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:background="@drawable/translucent_background"
            android:backgroundTint="#F1F1F1"
            android:hint="Enter Venue"
            android:padding="10dp"
            android:textColor="@color/black"
            android:textColorHint="#706D6D"

            android:textSize="16sp" />


        <Button
            android:id="@+id/button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/editTextVenue"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/post_button"
            android:text="Post"
            android:textColor="@android:color/white"
            android:textSize="18sp" />


    </RelativeLayout>

</RelativeLayout>